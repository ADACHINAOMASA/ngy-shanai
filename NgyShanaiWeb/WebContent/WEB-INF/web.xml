<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
	<display-name>NgyShanaiWeb</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<filter>
		<filter-name>RestFilter</filter-name>
		<filter-class>com.ibm.websphere.jaxrs.server.IBMRestFilter</filter-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>ngyshanai.FilterConfig</param-value>
		</init-param>
		<init-param>
			<param-name>requestProcessorAttribute</param-name>
			<param-value>RestFilter</param-value>
		</init-param>
		<init-param>
			<param-name>propertiesLocation</param-name>
			<param-value>serv.properties</param-value>
		</init-param>
	</filter>

	<filter>
		<filter-name>HtmlResponseHeaderFilter</filter-name>
		<filter-class>nis.framework.web.filter.ResponseHeaderFilter</filter-class>
		<init-param>
			<param-name>Cache-Control</param-name>
			<param-value>no-cache</param-value>
		</init-param>
	</filter>

	<filter-mapping>
        <filter-name>RestFilter</filter-name>
        <url-pattern>/service/*</url-pattern>
   	</filter-mapping>

   	<filter-mapping>
        <filter-name>HtmlResponseHeaderFilter</filter-name>
        <url-pattern>*.html</url-pattern>
   	</filter-mapping>

	<!-- Restサービスの窓口 -->
	<servlet>
		<servlet-name>RestApp</servlet-name>
		<servlet-class>com.ibm.websphere.jaxrs.server.IBMRestServlet</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>ngyshanai.AppConfig</param-value>
		</init-param>
		<init-param>
			<param-name>propertiesLocation</param-name>
			<param-value>serv.properties</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>RestApp</servlet-name>
		<url-pattern>/service/*</url-pattern>
	</servlet-mapping>

	<!-- 画像ダウンロードの窓口(必要に応じてurl-pattern変更すること) -->
	<servlet>
		<description></description>
		<display-name>ImageServlet</display-name>
		<servlet-name>ImageServlet</servlet-name>
		<servlet-class>ngyshanai.web.servlet.ImageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ImageServlet</servlet-name>
		<url-pattern>/image/*</url-pattern>
	</servlet-mapping>

	<!-- PDFダウンロード（SVF直印刷）の窓口 -->
	<servlet>
		<description></description>
      	<display-name>PdfServlet</display-name>
    	<servlet-name>PdfServlet</servlet-name>
    	<servlet-class>ngyshanai.web.servlet.PdfServlet</servlet-class>
    </servlet>
	<servlet-mapping>
    	<servlet-name>PdfServlet</servlet-name>
    	<url-pattern>*.pdf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>PdfServlet</servlet-name>
    	<url-pattern>*.svfwdp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>PdfServlet</servlet-name>
    	<url-pattern>*.svfwdd</url-pattern>
    </servlet-mapping>

	<ejb-local-ref>
		<description />
		<ejb-ref-name>ngyshanai.application.LogicExecutor/LogicExecutor</ejb-ref-name>
		<ejb-ref-type>Session</ejb-ref-type>
		<local-home />
		<local>ngyshanai.application.LogicExecutor</local>
		<ejb-link>LogicExecutor</ejb-link>
	</ejb-local-ref>

	<persistence-context-ref>
		<persistence-context-ref-name>jpa/lotdsp</persistence-context-ref-name>
		<persistence-unit-name>LotDspPU</persistence-unit-name>
		<persistence-context-type>Transaction</persistence-context-type>
	</persistence-context-ref>


</web-app>
